<div class="row">
  <div class="col-md-2 form-label"><%= form.label :sei, "姓" %></div>
  <div class="col-md-2"><%= form.text_field :sei %></div>
  <div class="col-md-2 form-label"><%= form.label :mei, "名" %></div>
  <div class="col-md-2"><%= form.text_field :mei %></div>
  <div class="col-md-4"></div>
</div>
<div class="row">
  <div class="col-md-2 form-label"><%= form.label :kana_sei, "セイ" %></div>
  <div class="col-md-2"><%= form.text_field :kana_sei %></div>
  <div class="col-md-2 form-label"><%= form.label :kana_mei, "メイ" %></div>
  <div class="col-md-2"><%= form.text_field :kana_mei %></div>
  <div class="col-md-4"></div>
</div>
<div class="row">
  <div class="col-md-2 form-label"><%= form.label :sex, "性別" %></div>
  <div class="col-md-2">男<%= form.radio_button :sex, 0 %>　女<%= form.radio_button :sex, 1 %></div>
  <div class="col-md-8"></div>
</div>
<div class="row">
  <div class="col-md-2 form-label"><%= form.label :sei, "生年月日" %></div>
  <div class="col-md-3">
    <span>年</span>
    <%= form.text_field :sei, size: "6" %>
    <span style="margin-left: 15px;">月日</span>
    <%= form.text_field :sei, size: "6" %>
  </div>
  <div class="col-md-7"></div>
</div>
<div class="row">
  <div class="col-md-2 form-label"><%= form.label :postal_code, "郵便番号" %></div>
  <div class="col-md-10"><input type="text" name="zip11" size="10" maxlength="8" onKeyUp="AjaxZip3.zip2addr(this,'','addr11','addr11');"></div>
</div>
<div class="row">
  <div class="col-md-2 form-label"><%= form.label :address, "住所" %></div>
  <div class="col-md-10"><input type="text" name="addr11" size="80"></div>
</div>
<div class="row">
  <div class="col-md-2 form-label"><%= form.label :tel, "電話番号" %></div>
  <div class="col-md-10">
    <%= form.text_field :tel1, size: "4" %>-
    <%= form.text_field :tel2, size: "4" %>-
    <%= form.text_field :tel3, size: "4" %>
  </div>
</div>
<div class="row">
  <div class="col-md-2 form-label"><%= form.label :mail, "メールアドレス" %></div>
  <div class="col-md-10">
    <input type="text" name="account" size="30">@
    <select name="sample">
      <option>選択してください</option>
      <option>gmail.com</option>
      <option>yahoo.co.jp</option>
      <option>該当なし</option>
    </select>
  </div>
</div>
<div class="row">
  <div class="col-md-2 form-label"><%= form.label :douki, "動機" %></div>
  <div class="col-md-10">
    <%= form.select :douki, Client::DOUKIES %>
  </div>
</div>
<div class="row">
  <div class="col-md-2 form-label"><%= form.label :shoukaisha, "紹介者" %></div>
  <div class="col-md-10">
    <%= form.text_field :shoukaisha %>
  </div>
</div>
<div class="row">
  <div class="col-md-2 form-label"><%= form.label :douki_etc, "動機　その他" %></div>
  <div class="col-md-10">
    <%= form.text_field :douki_etc %>
  </div>
</div>
<div class="row">
  <div class="col-md-2 form-label"><%= form.label :memo_client, "お客様用　メモ" %></div>
  <div class="col-md-10">
    <%= form.text_area :memo_client %>
  </div>
</div>
<div class="row">
  <div class="col-md-2 form-label"><%= form.label :memo_admin, "管理者用　メモ" %></div>
  <div class="col-md-10">
    <%= form.text_area :memo_admin %>
  </div>
</div>
<label>メールアドレス</label>
<input type="text" id="email">